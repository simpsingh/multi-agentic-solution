# =============================================================================
# Multi-Agentic Solution - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Settings
# =============================================================================
APP_NAME=multi-agentic-solution
ENVIRONMENT=development
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# AWS Credentials
# =============================================================================
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
AWS_DEFAULT_REGION=us-east-1

# =============================================================================
# S3 Configuration
# =============================================================================
S3_BUCKET_NAME=your-bucket-name
S3_INPUT_PREFIX=input/
S3_OUTPUT_PREFIX=output/
S3_DDL_OUTPUT_PREFIX=output/ddl_generated/
S3_DATA_OUTPUT_PREFIX=output/testdata_generated/

# =============================================================================
# Database (PostgreSQL)
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=agentic_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/agentic_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# =============================================================================
# Redis Cache
# =============================================================================
REDIS_URL=redis://redis:6379/0
REDIS_POOL_SIZE=10

# =============================================================================
# OpenSearch
# =============================================================================
OPENSEARCH_URL=http://opensearch:9200
OPENSEARCH_DDL_INDEX=ddl_index
OPENSEARCH_SYNTHETIC_INDEX=testdata_index
OPENSEARCH_SPEC_INDEX=spec_document_chunks
OPENSEARCH_MAX_RETRIES=5

# =============================================================================
# AWS Bedrock
# =============================================================================
BEDROCK_MODEL_ID=anthropic.claude-sonnet-4-5-v2:0
BEDROCK_REGION=us-east-1
BEDROCK_STREAMING_ENABLED=true
BEDROCK_MAX_CONCURRENT_REQUESTS=3
BEDROCK_TIMEOUT=60

# Bedrock Embeddings
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1
BEDROCK_EMBEDDING_DIMENSION=1536

# =============================================================================
# Airflow
# =============================================================================
AIRFLOW_URL=http://airflow:8080
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=admin
AIRFLOW_ADMIN_EMAIL=admin@example.com
AIRFLOW__WEBSERVER__SECRET_KEY=your_secret_key_here
AIRFLOW_PORT=8080

# =============================================================================
# FastAPI
# =============================================================================
FASTAPI_PORT=8000

# =============================================================================
# Gradio UI
# =============================================================================
GRADIO_PORT=7860
GRADIO_METADATA_REFRESH_INTERVAL=5
FASTAPI_ENDPOINT=http://fastapi:8000

# =============================================================================
# Agent Settings
# =============================================================================
MAX_FEEDBACK_ITERATIONS=10

# =============================================================================
# Search Settings
# =============================================================================
SEARCH_DEFAULT_DAYS_BACK=7
SEARCH_DEFAULT_LIMIT=5

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_BACKGROUND_EMBEDDING=true
ENABLE_OPENSEARCH_SYNC=true
ENABLE_REDIS_CACHE=true

# =============================================================================
# Guardrails & Security
# =============================================================================
MAX_PROMPT_LENGTH=5000
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DDL_PER_HOUR=20
RATE_LIMIT_DATA_PER_HOUR=20
RATE_LIMIT_SEARCH_PER_MINUTE=20

# Cache TTL (seconds)
CACHE_TTL_SEARCH=3600
CACHE_TTL_METADATA=86400
CACHE_TTL_DDL=604800
CACHE_TTL_FEEDBACK=3600
